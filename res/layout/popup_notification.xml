<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup_schedule"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="282dp"
        android:layout_height="49dp"
        android:background="#71dbfd"
        android:gravity="center"
        android:text="알림서비스"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/popup_no"
        android:layout_width="176dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:background="@drawable/closed" />

    <Button
        android:id="@+id/popup_car"
        android:layout_width="176dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/friend" />

    <Button
        android:id="@+id/popup_public"
        android:layout_width="176dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/popup_public" />

    <Button
        android:id="@+id/popup_walk"
        android:layout_width="176dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/popup_public" />

</LinearLayout>